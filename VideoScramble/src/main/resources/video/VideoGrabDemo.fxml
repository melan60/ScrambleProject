<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="video.VideoGrabDemoController">
            <center>
                <HBox spacing="10" alignment="CENTER">
                    <ImageView fitHeight="250" fitWidth="500" preserveRatio="true" fx:id="currentFrame"/>
                    <ImageView fitHeight="250" fitWidth="500" preserveRatio="true" fx:id="currentFrame2"/>
                    <ImageView fitHeight="250" fitWidth="500" preserveRatio="true" fx:id="currentFrame3"/>
                </HBox>
            </center>
        <bottom>
            <HBox alignment="center">
                <padding>
                    <Insets bottom="25" left="25" right="25" top="25" />
                </padding>
                <Button fx:id="button" alignment="center" onAction="#startCamera" text="Start" />
            </HBox>
        </bottom>

</BorderPane>
